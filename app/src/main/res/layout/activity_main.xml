<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/app_image_7"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:isScrollContainer="true"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu"
        app:itemTextColor="@color/black"
        app:itemIconTint="@color/black"
        android:background="#1836D8">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:background="@color/math_end"
        android:padding="5dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pamoja_prep"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/colorDefault"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transforming_academics_at_your_your_finger_tips"
            android:textColor="@color/colorDefault"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:scrollbarStyle="insideInset">

            <LinearLayout
                android:id="@+id/maths_id"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/math_background"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mathematics"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorDefault"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/elements_in_our_day_to_day"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="0dp"
                    android:src="@drawable/mathematics"
                    android:layout_marginStart="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/biology_background"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/biology_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biology"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorDefault"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coming_soon"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="0dp"
                    android:src="@drawable/biology"
                    android:layout_marginLeft="70dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/physics_background"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/physics_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/physics"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorDefault"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coming_soon"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="0dp"
                    android:src="@drawable/physics"
                    android:layout_marginLeft="70dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/chemistry_background"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/chemistry_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chemistry"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorDefault"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coming_soon"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="0dp"
                    android:src="@drawable/chemistry"
                    android:layout_marginLeft="70dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/geography_background"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/geography_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/geography"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorDefault"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coming_soon"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="0dp"
                    android:src="@drawable/geography"
                    android:layout_marginLeft="70dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/history_background"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/history_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorDefault"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coming_soon"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="0dp"
                    android:src="@drawable/history"
                    android:layout_marginStart="70dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="80dp"
                android:layout_gravity="center"
                android:background="@drawable/english_background"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/english_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorDefault"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coming_soon"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="0dp"
                    android:src="@drawable/english"
                    android:layout_marginStart="70dp"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>